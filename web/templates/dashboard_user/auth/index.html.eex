<div class="auth__container">
  <div class="container">
    <div class="grid-12 grid-md-6 push-md-3">
      <div class="auth__logo">
        <a href="/" class="js-no-smoothstate"><img src="<%= logo(@conn) %>" /></a>
      </div>
      <%= form_for @conn, user_auth_path(@conn, :login), [as: :login, class: "js-no-smoothstate"], fn f -> %>

        <div class="auth__input --radius-top --radius-bottom">
          <%= text_input f, :email, class: "auth__field", placeholder: gettext("Email") %>
          <i class="icon-email"></i>
        </div>

        <div class="+spacer"></div>

        <div class="auth__input --radius-bottom --radius-top">
          <%= password_input f, :password, class: "auth__field", placeholder: gettext("Password") %>
          <i class="icon-lock"></i>
        </div>
        <div class="+spacer"></div>
        <button type="submit" class="button --auth --large --expand"><i class="icon-login"></i> <%= gettext("Sign in") %></button>
      <% end %>
    </div>
  </div>
</div>
