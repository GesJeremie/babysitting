<%= form_for @changeset, user_security_path(@conn, :update_password), [class: "js-no-smoothstate"], fn f -> %>
<div id="content-wrapper">
  <div class="header__container">
    <div class="grid-8">
      <div class="header__title"><%= gettext "Security" %></div>
      <div class="header__description"><%= gettext "Sensitive informations of your account" %></div>
    </div>
    <div class="clear"></div>
  </div>

  <div class="container-fluid">
    
      <div class="grid-4">
        <div class="panel__container">
          <div class="panel__title"><%= gettext "Old Password" %></div>
          <div class="panel__content">
            <div class="form__container">
                <%= password_input f, :password_old %>
                <%= error_tag f, :password_old %>
            </div>
          </div>
        </div>
      </div>
      <div class="grid-4">
        <div class="panel__container">
          <div class="panel__title"><%= gettext "New Password" %></div>
          <div class="panel__content">
            <div class="form__container">
                <%= password_input f, :password %>
                <%= error_tag f, :password %>
            </div>
          </div>
        </div>
      </div>

      <div class="grid-4">
        <div class="panel__container">
          <div class="panel__title"><%= gettext "New Password Confirmation" %></div>
          <div class="panel__content">
            <div class="form__container">
                <%= password_input f, :password_confirmation %>
                <%= error_tag  f, :password_confirmation %>
            </div>
          </div>
        </div>
      </div>

      <div class="clear"></div>

  <button type="submit" class="button --primary">Update password</button>

  </div>
</div>

<% end %>
