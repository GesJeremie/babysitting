<div class="hero">
  <div class="hero__container" style="background-image: url('/images/tenants/<%= @tenant.slug %>/cover.jpg')">
    <div class="hero__overlay"></div>
    <h2 class="hero__title"><%= gettext "Your Baby Sitter in %{tenant_name}", tenant_name: @tenant.name %></h2>
    <p class="hero__description"><%= gettext "Simple, free and effective. Find your next baby sitter." %></p>
    <div class="fb-like" data-href="<%= @tenant.facebook %>" data-layout="button_count" data-action="like" data-size="large" data-show-faces="true" data-share="true"></div>
  </div>
</div>

<div class="container">
  <%= for ad <- @ads do %>
    <h1><%= ad.firstname %></h1>
    <%= Babysitting.Ad.age(ad) %> <%= gettext("years old") %><br/>
    <%= Babysitting.Ad.short_description(ad) %>
    <hr>
  <% end %>
</div>

<div class="container">
  <div class="empty__container --home">
    <div class="row">
      <div class="grid-4">
        <div class="empty__artwork">
          <img src="/images/teddy.png" />
        </div>
      </div>
      <div class="grid-6">
        <h3 class="empty__title"><%= gettext "Waiting for classified" %></h3>
        <p class="empty__description"><%= gettext "No classified available yet. If you are a baby sitter you can add your classifed right now !" %></p>
        <a class="empty__button" href="<%= ad_path(@conn, :new) %>"><%= gettext "Add my classifed for free" %></a>
      </div>
    </div>
    <div class="clear"></div>
  </div>
</div>

<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v2.6&appId=527465647462210";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>