<div id="app"
    data-controller="offer.new"
></div>

<div class="container">
  <%= form_for @changeset, offer_path(@conn, :create), [multipart: true], fn f -> %>

    <div class="form__container">
        <h2 class="form__title"><i class="icon-user"></i> A propos de vous</h2>
        <div class="row">
          <div class="grid-4">
            <%= text_input f, :firstname, placeholder: gettext "Firstname" %>
          </div>
          <div class="grid-4">
            <%= text_input f, :lastname, placeholder: gettext "Lastname" %>
          </div>
          <div class="grid-4">
            <%= text_input f, :birthday, placeholder: gettext "Birthday" %>
          </div>
        </div>
        <div class="clear"></div>
    </div>

    <div class="form__container">
        <h2 class="form__title"><i class="icon-file"></i> <%= gettext "Your classified" %></h2>
        <p class="form__description"><%= gettext "Tell us more about you, your scholarship, your schedule and why you are an awesome baby sitter" %></p>
        <%= textarea f, :description, class: "form-control" %>
        <span id="chars" class="form__chars" data-min="280"></span>

        <div class="+spacer"></div>

        <label><%= gettext "Avatar" %></label>
        <%= file_input f, :avatar %>
    </div>

    <div class="form__container">
        <h2 class="form__title"><i class="icon-contact"></i> Contact</h2>
        <p class="form__description"><%= gettext "Basic informations for the parents to reach you"  %></p>
        <div class="row">
          <div class="grid-6">
            <%= text_input f, :email, placeholder: "Email" %>
          </div>
          <div class="grid-6">
            <%= text_input f, :phone, placeholder: "Téléphone" %>
          </div>
        </div>
        <div class="clear"></div>
    </div>

    <div class="form__container">
        <h2 class="form__title"><i class="icon-lock"></i> <%= gettext "Sécurité" %></h2>
        <p class="form__description"><%= gettext "With this password you will be able to edit your classified in the future" %></p>
        <div class="row">
          <div class="grid-6">
            <%= text_input f, :password, placeholder: gettext "Password" %>
          </div>
          <div class="grid-6">
            <%= text_input f, :password_confirmation, placeholder: "Password confirmation" %>
          </div>
        </div>
        <div class="clear"></div>
    </div>

    <div class="+spacer"></div>
    <button type="submit" class="button --primary --large"><i class="icon-zap"></i> <%= gettext "Add my classified" %></button>
  <% end %>

</div>
