<div class="navbar">
  <div class="navbar__container">

    <div class="container-fluid">
      <div class="row">
        <div class="grid-3">
          <div class="navbar__logo">
            <a href="#"><img src="/images/tenants/<%= @tenant.slug %>/logo.png" /></a>
          </div>
        </div>
        <div class="grid-6">
          <ul id="navbar" class="navbar__links">
            <li><a class="navbar__link" href="#">A propos</a></li>
            <li>
              <a id="trigger-modal" class="navbar__link" href="#animatedModal">Villes</a>
            </li>
          </ul>
        </div>
        <div class="grid-3">
          <div class="navbar__button">
            <a href="#">Ajouter mon annonce !</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="hero">
  <div class="hero__container" style="background-image: url('/images/tenants/<%= @tenant.slug %>/cover.jpg')">
    <div class="hero__overlay"></div>
    <h2 class="hero__title"><%= gettext "Votre Baby Sitter sur %{tenant_name}", tenant_name: @tenant.name %></h2>
    <p class="hero__description"><%= gettext "Simple, gratuit et efficace. Trouvez la personne qui correspond à vos besoins." %></p>
  </div>
</div>

<div class="container">
  <div class="empty__container --home">
    <div class="row">
      <div class="grid-4">
        <div class="empty__artwork">
          <img src="/images/teddy.png" />
        </div>
      </div>
      <div class="grid-6">
        <h3 class="empty__title"><%= gettext("En attente d'annonces") %></h3>
        <p class="empty__description"><%= gettext("Pour le moment aucune annonce n'est disponible. Si vous êtes baby sitter vous pouvez ajouter votre annonce maintenant !") %></p>
        <a class="empty__button" href="#"><%= gettext("Ajouter mon annonce") %></a>
      </div>
    </div>
    <div class="clear"></div>
  </div>
</div>

<div class="footer__container">
  
  <div class="footer__links">
    <a target="_blank" href="<%= @tenant.facebook %>">Facebook</a>
    |
    <a href="#"><%= gettext("Légale") %></a>
    |
    <a href="#"><%= gettext("Contact") %></a>
    |
    <a href="#"><%= gettext("Presse") %></a>
    |
    <a href="#"><%= gettext("FAQ") %></a>
  </div>
</div>

